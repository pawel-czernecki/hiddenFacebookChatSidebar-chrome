{
    "manifest_version": 2,
    "name": "hiddenFacebookChatSidebar",
    "version": "1.0.0",
    "author": "Pawe≈Ç Czernecki",

    "description": "hiddenFacebookChatSidebar is a simple tool designed to display facebook chat as popup irrespective from screen resolution.",

    "browser_action": {
		"browser_style": false,
		"default_icon": {
			"16": "icons/16.png",
			"32": "icons/32.png"
		},
		"default_popup": "popup.html",
		"default_title": "hiddenChatSidebar"
    },

    "content_scripts": [
        {
          "matches": ["https://www.facebook.com/","*://www.facebook.com/*","*://*.facebook.com/*"],
          "js": ["background.js"]
        }
      ],
    
    "icons": {
		"48": "icons/48.png",
		"96": "icons/96.png"
    },
    
    "permissions": [
		"*://facebook.com/*",
        "storage"
    ]
}

    